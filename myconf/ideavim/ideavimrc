" nnoremap ,tn    gt
" nnoremap ,tp    gT
" action ToggleFullScreen
" action WelcomeScreen.Settings
" action ShowFilePath<CR>
" action ShowPopupMenu<CR>
" set visualbell     " 'vb'    use visual bell instead of beeping
" set wrapscan       " 'ws'    searches wrap around the end of the file
" set digraph        " 'dg'    enable the entering of digraphs in Insert mode
" set gdefault       " 'gd'    the ":substitute" flag 'g' is default on
" set iskeyword      " 'isk'   defines keywords for commands like 'w', '*', etc.
" set matchpairs     " 'mps'   pairs of characters that "%" can match
" set nrformats      " 'nf'    number formats recognized for CTRL-A command
" set number         " 'nu'    print the line number in front of each line
" set relativenumber " 'rnu'   show the line number relative to the line with the cursor
" set scroll         " 'scr'   lines to scroll with CTRL-U and CTRL-D
" set scrolljump     " 'sj'    minimum number of lines to scroll
" set scrolloff      " 'so'    minimum nr. of lines above and below cursor
" set selection      " 'sel'   what type of selection to use
" set sidescroll     " 'ss'    minimum number of columns to scroll horizontal
" set sidescrolloff  " 'siso'  min. nr. of columns to left and right of cursor
" set timeout        " 'to'    use timeout for mapped key sequences
" set timeoutlen     " 'tm'    time that is waited for a mapped key sequence
" set undolevels     " 'ul'    maximum number of changes that can be undone
