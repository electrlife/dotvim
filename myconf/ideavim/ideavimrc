" Enable features
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
set clipboard      " 'cb'    clipboard options
set history=1000   " 'hi'    number of command-lines that are remembered
set hlsearch       " 'hls'   highlight matches with last search pattern
set ignorecase     " 'ic'    ignore case in search patterns
set incsearch      " 'is'    show where search pattern typed so far matches
set showmode       " 'smd'   message on status line to show current mode
set smartcase      " 'scs'   no ignore case when pattern has uppercase
set viminfo        " 'vi'    information to remember after restart

set vim-multiple-cursors
set vim-surround

"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" Key maps
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
nnoremap ,ga    :action GotoAction<CR>
nnoremap ,gc    :action GotoClass<CR>
nnoremap ,gf    :action GotoFile<CR>
nnoremap ,gs    :action GotoSymbol<CR>
nnoremap ,bg    :action FileStructurePopup<CR>
nnoremap ,gv    :action Terminal.OpenInTerminal<CR>
nnoremap ,gm    :action Tool_External Tools_Open in Vim<CR>

vnoremap ,ga    :action GotoAction<CR>
vnoremap ,gc    :action GotoClass<CR>
vnoremap ,gf    :action GotoFile<CR>
vnoremap ,gs    :action GotoSymbol<CR>
vnoremap ,bg    :action FileStructurePopup<CR>
vnoremap ,gv    :action Terminal.OpenInTerminal<CR>
vnoremap ,gm    :action Tool_External Tools_Open in Vim<CR>

vnoremap  gc    :action CommentByBlockComment<CR>


